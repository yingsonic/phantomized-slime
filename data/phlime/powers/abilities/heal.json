{
    "name": "§b§nSlimey Regeneration",
    "description": "Being a slime, you are able to heal and reconstruct your body in a more instantaneous way.\n\n§4§nBleed§r\nBleed is a new status effect that gives short but very damaging tick damage, this damage is considered true damage and bypasses armor and is applied to enemies when using certain abilities.\n\n§7§oThe following are the four states you can be in, depending on your mode or if you are ephemeral.\n",
    "hidden": false,

    "badges": [
        {
            "type": "origins:keybind",
            "sprite": "origins:textures/gui/badge/active.png",
            "text": "Use %s to heal\nWill not activate if lacking stamina or if health is full\n\n§9Cooldown: 0.75s"
        }
    ],

    "type": "apoli:multiple",
    "main": {
        "type": "apoli:active_self",
        "entity_action": {
            "type": "apoli:if_else_list",
            "actions": [
                {
                    "action": {
                        "type": "origins:execute_command",
                        "command": "title @s actionbar \"§cYou don't have enough stamina to heal.\""
                    },
                    "condition": {
                        "type": "apoli:resource",
                        "resource": "*:stamina_var",
                        "comparison": "<=",
                        "compare_to": 0
                    }
                },
                {
                    "action": {
                        "type": "origins:execute_command",
                        "command": "title @s actionbar \"§cYou are already full health!\""
                    },
                    "condition": {
                        "type": "origins:health",
                        "comparison": "==",
                        "compare_to": 20
                    }
                },
                {
                    "action": {
                        "type": "apoli:and",
                        "actions": [
                            {
                                "type": "apoli:if_else",
                                "condition": {
                                    "type": "apoli:resource",
                                    "resource": "*:abilities/switch_var",
                                    "comparison": "==",
                                    "compare_to": 3
                                },
                                "if_action": {
                                    "type": "apoli:trigger_cooldown",
                                    "power": "*:*_cd_guardian"
                                },
                                "else_action": {
                                    "type": "apoli:trigger_cooldown",
                                    "power": "*:*_cd"
                                }
                            },
                            {
                                "type": "apoli:change_resource",
                                "resource": "*:stamina_var",
                                "operation": "add",
                                "change": -10
                            },
                            {
                                "type": "origins:execute_command",
                                "command": "execute as @s run function phlime:particles/heal"
                            },
                            {
                                "type": "apoli:heal",
                                "amount": 1
                            },
                            {
                                "type": "origins:delay",
                                "ticks": 8,
                                "action": {
                                    "type": "apoli:heal",
                                    "amount": 1
                                }
                            }
                        ]
                    },
                    "condition": {
                        "type": "apoli:constant",
                        "value": true
                    }
                }
            ]   
            
        },
        "condition": {
            "type": "apoli:and",
            "conditions": [
                {
                    "type": "apoli:resource",
                    "resource": "*:*_cd",
                    "comparison": "<=",
                    "compare_to": 0
                },
                {
                    "type": "apoli:resource",
                    "resource": "*:*_cd_guardian",
                    "comparison": "<=",
                    "compare_to": 0
                },
                {
                    "type": "origins:and",
                    "conditions": [
                        {
                            "type": "origins:resource",
                            "resource": "*:passives/transformation_var",
                            "comparison": "==",
                            "compare_to": 300
                        },
                        {
                            "type": "origins:or",
                            "conditions": [
                                {
                                    "type": "origins:sneaking",
                                    "inverted": true
                                },
                                {
                                    "type": "origins:equipped_item",
                                    "equipment_slot": "mainhand",
                                    "item_condition": {
                                        "type": "origins:empty"
                                    },
                                    "inverted": true
                                }
                            ]
                        }
                    ] 
                }
            ]
        },
        "cooldown": 1,
        "hud_render": {
            "should_render": false
        },
        "key": {
            "key": "key.origins.secondary_active",
            "continuous": true
        }
    },
    "cd": {
        "type": "apoli:cooldown",
        "cooldown": 20,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_02.png",
            "bar_index": 9
        }
    },
    "cd_guardian": {
        "type": "apoli:cooldown",
        "cooldown": 15,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_02.png",
            "bar_index": 9
        }
    }
}