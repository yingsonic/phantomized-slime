{
    "name": "§6§nRogue",
    "description": "In rogue mode, you are more accustomed to scouting and not as much combat.\n",
    "hidden": false,

    "type": "origins:multiple",
    "phase_toggle": {
        "type": "apoli:active_self",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:if_else",
                    "condition": {
                        "type": "origins:resource",
                        "resource": "*:*_is_phasing",
                        "comparison": "==",
                        "compare_to": 0
                    },
                    "if_action": {
                        "type": "origins:and",
                        "actions": [
                            {
                                "type": "origins:execute_command",
                                "command": "title @s actionbar \"§7You have entered into an ephemeral state.\""
                            },
                            {
                                "type": "apoli:change_resource",
                                "resource": "*:*_is_phasing",
                                "operation": "set",
                                "change": 1
                            },
                            {
                                "type": "apoli:execute_command",
                                "command": "power grant @s phlime:supps/rogue_stacks"
                            },
                            {
                                "type": "apoli:change_resource",
                                "resource": "*:*_stack_var",
                                "operation": "set",
                                "change": 0
                            },
                            {
                                "type": "apoli:change_resource",
                                "resource": "*:*_shroud_timer",
                                "operation": "set",
                                "change": 60
                            }
                        ]
                    },
                    "else_action": {
                        "type": "origins:and",
                        "actions": [
                            {
                                "type": "origins:play_sound",
                                "sound": "block.respawn_anchor.deplete",
                                "volume": 1,
                                "pitch": 1.1
                            },
                            {
                                "type": "apoli:change_resource",
                                "resource": "*:*_is_phasing",
                                "operation": "set",
                                "change": 0
                            },
                            {
                                "type": "apoli:execute_command",
                                "command": "power revoke @s phlime:supps/rogue_stacks"
                            },
                            {
                                "type": "origins:if_else",
                                "condition": {
                                    "type": "origins:resource",
                                    "resource": "*:*_stack_var",
                                    "comparison": ">",
                                    "compare_to": 0
                                },
                                "if_action": {
                                    "type": "apoli:trigger_cooldown",
                                    "power": "*:*_shroud_timer"
                                }
                            }
                        ]
                    }
                }
            ]
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:abilities/switch_var",
                    "comparison": "==",
                    "compare_to": 1
                }
            ]
        },
        "hud_render": {
            "should_render": false
        },
        "key": {
            "key": "key.origins.senary_active"
        },
        "cooldown": 10
    },
    "phase": {
        "type": "apoli:phasing",
        "blacklist": true,
        "render_type": "blindness",
        "view_distance": 15,
        "block_condition": {
            "type": "origins:in_tag",
            "tag": "origins:unphasable"
        },
        "phase_down_condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:sneaking"
                },
                {
                    "type": "origins:on_block"
                }
            ]
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:abilities/switch_var",
                    "comparison": "==",
                    "compare_to": 1
                },
                {
                    "type": "origins:resource",
                    "resource": "*:*_is_phasing",
                    "comparison": "==",
                    "compare_to": 1
                }
            ]
        }
    },
    "faster": {
        "type": "origins:conditioned_attribute",
        "modifier": {
            "attribute": "minecraft:generic.movement_speed",
            "operation": "multiply_total",
            "value": 0.5
        },
        "tick_rate": 10,
        "condition": {
            "type": "apoli:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:abilities/switch_var",
                    "comparison": "==",
                    "compare_to": 1
                },
                {
                    "type": "origins:or",
                    "conditions": [
                        {
                            "type": "origins:resource",
                            "resource": "*:stamina_var",
                            "comparison": ">=",
                            "compare_to": 50
                        },
                        {
                            "type": "origins:resource",
                            "resource": "*:*_is_phasing",
                            "comparison": "==",
                            "compare_to": 1
                        }
                    ]   
                }
            ]
        }
    },
    "translucent_normal": {
        "type": "apoli:model_color",
        "alpha": 0.6,
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:abilities/switch_var",
                    "comparison": "==",
                    "compare_to": 1
                },
                {
                    "type": "origins:resource",
                    "resource": "*:*_is_phasing",
                    "comparison": "==",
                    "compare_to": 0
                }
            ]
        }
    },
    "translucent_phasing": {
        "type": "apoli:model_color",
        "alpha": 0.2,
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:abilities/switch_var",
                    "comparison": "==",
                    "compare_to": 1
                },
                {
                    "type": "origins:resource",
                    "resource": "*:*_is_phasing",
                    "comparison": "==",
                    "compare_to": 1
                }
            ]
        }
    },
    "damage_dealt": {
        "type": "apoli:modify_damage_dealt",
        "modifier": {
            "operation": "multiply_total",
            "value": -0.2
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:abilities/switch_var",
            "comparison": "==",
            "compare_to": 1
        }
    },
    "damage_taken_phasing": {
        "type": "apoli:modify_damage_taken",
        "modifier": {
            "operation": "multiply_total",
            "value": 0.5
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_is_phasing",
            "comparison": "==",
            "compare_to": 1
        }
    },
    "falling_mode": {
        "type": "apoli:action_over_time",
        "falling_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "apoli:execute_command",
                    "command": "power revoke @s phlime:supps/rogue_stacks"
                },
                {
                    "type": "apoli:change_resource",
                    "resource": "*:*_is_phasing",
                    "operation": "set",
                    "change": 0
                },
                {
                    "type": "apoli:change_resource",
                    "resource": "*:*_stack_var",
                    "operation": "set",
                    "change": 0
                },
                {
                    "type": "apoli:change_resource",
                    "resource": "*:*_shroud_timer",
                    "operation": "set",
                    "change": 40
                }
            ]
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:abilities/switch_var",
                    "comparison": "==",
                    "compare_to": 1
                }
            ]
        },
        "interval": 1
    },
    "ash": {
        "type": "apoli:action_over_time",
        "entity_action": {
            "type": "apoli:execute_command",
            "command": "particle minecraft:white_ash ~ ~1 ~ 0.05 0.5 0.05 0 1 force"
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:abilities/switch_var",
                    "comparison": "==",
                    "compare_to": 1
                },
                {
                    "type": "origins:moving"
                },
                {
                    "type": "origins:resource",
                    "resource": "*:*_is_phasing",
                    "comparison": "==",
                    "compare_to": 0
                },
                {
                    "type": "origins:resource",
                    "resource": "*:stamina_var",
                    "comparison": ">=",
                    "compare_to": 50
                }
            ]
        },
        "interval": 3
    },
    "is_phasing": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "start_value": 0,
        "hud_render": {
            "should_render": false
        }
    },
    "stack_var": {
        "type": "origins:resource",
        "min": 0,
        "max": 3,
        "start_value": 0,
        "hud_render": {
            "should_render": true,
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_is_phasing",
                "comparison": "==",
                "compare_to": 1
            }
        }
    },
    "shroud_timer": {
        "type": "apoli:cooldown",
        "cooldown": 40,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_01.png",
            "bar_index": 0,
            "condition": {
                "type": "origins:and",
                "conditions": [
                    {
                        "type": "origins:resource",
                        "resource": "*:*_shroud_timer",
                        "comparison": ">",
                        "compare_to": 2
                    },
                    {
                        "type": "origins:resource",
                        "resource": "*:*_is_phasing",
                        "comparison": "==",
                        "compare_to": 0
                    }
                ]
            },
            "inverted": true
        }
    }
}