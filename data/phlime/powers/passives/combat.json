{
    "name": "§6§nCombat",
    "description": "In combat mode, you are ever so closer attuned to the shadows.\n",
    "hidden": false,

    "type": "origins:multiple",
    "particles": {
        "type": "apoli:action_over_time",
        "entity_action": {
            "type": "apoli:execute_command",
            "command": "execute as @s run function phlime:particles/combat"
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:abilities/switch_var",
            "comparison": "==",
            "compare_to": 2
        },
        "interval": 5
    },
    "sword_reach": {
        "type": "apoli:action_over_time",
        "rising_action": {
            "type": "apoli:execute_command",
            "command": "scale set pehkui:entity_reach 1.25 @s"
        },
        "falling_action": {
            "type": "apoli:execute_command",
            "command": "scale reset pehkui:entity_reach @s"
        },
        "condition": {
            "type": "apoli:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:abilities/switch_var",
                    "comparison": "==",
                    "compare_to": 2
                },
                {
                    "type": "apoli:equipped_item",
                    "equipment_slot": "mainhand",
                    "item_condition": {
                        "type": "apoli:ingredient",
                        "ingredient": {
                            "tag": "phlime:swords"
                        }
                    }
                }
            ]
        },
        "interval": 1
    },
    "sword_attr": {
        "type": "origins:conditioned_attribute",
        "modifiers": [
            {
                "attribute": "generic.attack_speed",
                "operation": "multiply_total",
                "value": 0.5
            },
            {
                "attribute": "generic.attack_damage",
                "operation": "multiply_total",
                "value": -0.2
            }
        ],
        "tick_rate": 1,
        "condition": {
            "type": "apoli:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:abilities/switch_var",
                    "comparison": "==",
                    "compare_to": 2
                },
                {
                    "type": "apoli:equipped_item",
                    "equipment_slot": "mainhand",
                    "item_condition": {
                        "type": "apoli:ingredient",
                        "ingredient": {
                            "tag": "phlime:swords"
                        }
                    }
                },
                {
                    "type": "origins:has_power",
                    "power": "phlime:supps/scythe_use",
                    "inverted": true
                }
            ]
        }
    },
    "pickaxe": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:apply_effect",
            "effect": {
                "effect": "minecraft:haste",
                "duration": 8,
                "amplifier": 2,
                "is_ambient": true,
                "show_particles": false,
                "show_icon": false
            }
        },
        "condition": {
            "type": "apoli:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:abilities/switch_var",
                    "comparison": "==",
                    "compare_to": 2
                },
                {
                    "type": "apoli:equipped_item",
                    "equipment_slot": "mainhand",
                    "item_condition": {
                        "type": "apoli:ingredient",
                        "ingredient": {
                            "tag": "phlime:pickaxes"
                        }
                    }
                }
            ]
        },
        "interval": 5
    },
    "scythe_check": {
        "type": "origins:action_over_time",
        "falling_action": {
            "type": "apoli:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "*:abilities/scythe_has",
                "comparison": "==",
                "compare_to": 1
            },
            "if_action": {
                "type": "apoli:and",
                "actions": [
                    {
                        "type": "origins:modify_inventory",
                        "inventory_type": "inventory",
                        "item_action": {
                            "type": "origins:consume"
                        },
                        "item_condition": {
                            "type": "origins:has_power",
                            "power": "phlime:supps/scythe_use"
                        }
                    },
                    {
                        "type": "apoli:change_resource",
                        "resource": "*:abilities/scythe_uses",
                        "operation": "set",
                        "change": 0
                    },
                    {
                        "type": "apoli:change_resource",
                        "resource": "*:abilities/scythe_has",
                        "operation": "set",
                        "change": 0
                    }
                ]
            }
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:abilities/switch_var",
            "comparison": "==",
            "compare_to": 2
        },
        "interval": 1
    }
}